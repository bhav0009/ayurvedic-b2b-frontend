# Environment Configuration Template
# Copy this file to .env.local and update with your values

# =============================================================================
# SANITY CMS CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your-api-token

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment (development, staging, production)
NODE_ENV=development

# Application URL (used for SEO, redirects, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Vercel Analytics (already configured)
# Google Analytics ID (optional)
NEXT_PUBLIC_GA_ID=

# Sentry DSN for error monitoring (optional)
SENTRY_DSN=

# =============================================================================
# EMAIL CONFIGURATION (for contact forms)
# =============================================================================
# SMTP Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@maharishiatreya.com

# SendGrid API Key (alternative to SMTP)
SENDGRID_API_KEY=

# =============================================================================
# SECURITY
# =============================================================================
# NextAuth Secret (if implementing authentication)
NEXTAUTH_SECRET=dev-bhav-key
NEXTAUTH_URL=http://localhost:3000

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_SEARCH=false